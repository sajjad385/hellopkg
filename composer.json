{
    "name": "sajjad385/hellopkg",
    "description": "This is a simple package to print hello",
    "version": "1.0.0",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Sajjad385\\Hellopkg\\": "src/"
        },
        "files": [
            "src/index.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "\\Tests\\": "/tests"
        }
    },
    "scripts": {
        "test": "vendor\\bin\\phpunit",
        "phpunit": "vendor/bin/phpunit",
        "test-coverage": "vendor\\bin\\phpunit --coverage-html coverage",
        "format": "vendor\\bin\\php-cs-fixer fix --allow-risky=yes"
    },
    "authors": [
        {
            "name": "sajjad-xs",
            "email": "sajjad@xpeedstudio.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.0"
    },
    "repositories": [],
    "license": [
        "LGPL-2.1-only",
        "GPL-3.0-or-later"
    ],
    "extra": {},
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}